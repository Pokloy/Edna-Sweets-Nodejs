<!DOCTYPE html>
<html lang="en">
<%- include('../admin-partials/head.ejs') %>

    <body class="sb-nav-fixed">
        <%- include('../admin-partials/nav.ejs') %>
            <div id="layoutSidenav">
                <%- include('../admin-partials/sidebar.ejs') %>
                    <div id="layoutSidenav_content">
                        <main>
                            <div class="container-fluid px-4">
                                <h1 class="mt-4">Dashboard</h1>
                                <ol class="breadcrumb mb-4">
                                    <li class="breadcrumb-item active">Dashboard</li>
                                </ol>



                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <i class="fas fa-chart-area me-1"></i>
                                                Customer Orders
                                            </div>
                                            <div class="card-body">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">ID</th>
                                                            <th scope="col">Fullname</th>
                                                            <th scope="col">Address</th>
                                                            <th scope="col">Phone</th>
                                                            <th scope="col">Product</th>
                                                            <th scope="col">Quantity</th>
                                                            <th scope="col">Price</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>

                                                            <td scope="row">21654165165</td>
                                                            <td>Mark Rodeo</td>
                                                            <td>St 123 new york</td>
                                                            <td>6584255</td>
                                                            <td>Yema 15</td>
                                                            <td>2</td>
                                                            <td>30</td>
                                                            <td><button type="button"
                                                                    class="btn btn-danger">Delete</button></td>
                                                        </tr>
                                                        <% if(orders.length> 0) {%>
                                                            <% orders.forEach(order=> {%>
                                                                <tr>
                                                                    <td scope="row">
                                                                        <%= order._id %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.name %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.address %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.pnumber %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.product %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.quantity %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.price %>
                                                                    </td>
                                                                    <td><a class="delete" data-doc="<%= order._id %>"><button
                                                                                type="button"
                                                                                class="btn btn-danger">Delete</button></a>
                                                                    </td>
                                                                </tr>
                                                                <%})%>
                                                                    <% } else { %>

                                                                        <% } %>

                                                    </tbody>
                                                </table>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </main>
                    </div>
            </div>
            <!-- JSON FOR DELETE REQUEST -->
            <script>
                const trashcan = document.querySelector('a.delete');

                trashcan.addEventListener('click', (e) => {
                    const endpoint = `/admin/${trashcan.dataset.doc}`;

                    fetch(endpoint, {
                        method: 'DELETE'
                    })
                        .then((response) => response.json())
                        .then((data) => window.location.href = data.redirect)
                        .catch(err => console.log(err));
                })
            </script>









            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
                crossorigin="anonymous"></script>
            <script src="/admin-side/scripts.js"></script>
    </body>

</html>